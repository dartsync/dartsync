<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent" android:id="@+id/txtFileName"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent" android:id="@+id/txtFileTime"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent" android:id="@+id/txtFileSize"
        android:layout_height="wrap_content" />
</LinearLayout>